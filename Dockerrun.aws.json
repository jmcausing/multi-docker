{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [
        {
            "name": "client",
            "image": "jmcausing1/complex-client:latest",
            "hostname": "client",
            "essential": false,
            "memory": 128
        },
        {
            "name": "server",
            "image": "jmcausing1/complex-server:latest",
            "hostname": "api",
            "essential": false,
            "memory": 128
        },        
        {
            "name": "worker",
            "image": "jmcausing1/complex-worker:latest",
            "hostname": "worker",
            "essential": false,
            "memory": 128
        },   
        {
            "name": "nginx",
            "image": "jmcausing1/complex-nginx:latest",
            "hostname": "nginx",
            "essential": true,
            "portMappings": [
                {
                    "hostPort": 80,
                    "containerPort": 80
                }
            ],
            "links": ["client", "server"],
            "memory": 128
        }                 
    ]
}